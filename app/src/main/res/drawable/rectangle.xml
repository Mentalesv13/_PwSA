<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape  android:shape="rectangle">
            <solid
                android:color="#ff6600" />
            <stroke
                android:width="2dp"
                android:color="#EAD61C" />
            <corners
                android:radius="7dp" />
            <padding
                android:left="5dp"
                android:top="5dp"
                android:right="5dp"
                android:bottom="5dp" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#ffffff"
                android:centerColor="#EEE8E8"
                android:endColor="#FFD7D7"
                android:angle="270" />
            <stroke
                android:width="6dp"
                android:color="#92AAAAAA" />
            <corners
                android:radius="25dp" />
            <padding
                android:left="5dp"
                android:top="5dp"
                android:right="5dp"
                android:bottom="5dp" />
        </shape>
    </item>
</selector>